<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Producenci</h1>
  <%= link_to "Nowy producent", new_manufacturer_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body p-0">
    <table class="table table-striped table-hover mb-0">
      <thead class="table-dark">
      <tr>
        <th>Nazwa</th>
        <th>Opis</th>
        <th class="text-end">Akcje</th>
      </tr>
      </thead>
      <tbody>
      <% @manufacturers.each do |manufacturer| %>
        <tr>
          <td><%= link_to manufacturer.name, manufacturer %></td>
          <td><%= manufacturer.description %></td>
          <td class="text-end">
            <%= link_to "Pokaż", manufacturer, class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Edytuj", edit_manufacturer_path(manufacturer), class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Usuń", manufacturer, method: :delete, data: { confirm: "Usunąć?" }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
