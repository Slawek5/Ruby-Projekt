<%= form_with(model: manufacturer, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Nazwa", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Opis", class: "form-label" %>
    <%= form.text_area :description, rows: 3, class: "form-control" %>
  </div>

  <%= form.submit "Dodaj producenta", class: "btn btn-primary" %>
<% end %>
