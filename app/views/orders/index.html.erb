<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Zamówienia</h1>
  <%= link_to "Nowe zamówienie", new_order_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body p-0">
    <table class="table table-striped table-hover mb-0">
      <thead class="table-dark">
      <tr>
        <th>Klient</th>
        <th>Status</th>
        <th>Data zamówienia</th>
        <th>Data wysyłki</th>
        <th class="text-end">Akcje</th>
      </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.customer&.name %></td>
          <td><%= order.status %></td>
          <td><%= order.ordered_at&.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= order.shipped_at&.strftime("%Y-%m-%d %H:%M") %></td>
          <td class="text-end">
            <%= link_to "Pokaż", order, class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Edytuj", edit_order_path(order), class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to 'Usuń', order_path(order), method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć?' }, class: 'btn btn-danger' %>

          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
