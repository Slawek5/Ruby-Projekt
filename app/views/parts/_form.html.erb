<%= form_with(model: part, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, "Tytuł", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :sku, "SKU", class: "form-label" %>
    <%= form.text_field :sku, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Opis", class: "form-label" %>
    <%= form.text_area :description, rows: 3, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :status, "Status", class: "form-label" %>
    <%= form.select :status, ["dostępny", "niedostępny"], {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, "Kategoria", class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Wybierz kategorię" }, class: "form-select" %>
  </div>

  <%= form.submit "Dodaj część", class: "btn btn-primary" %>
<% end %>
