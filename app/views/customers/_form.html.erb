<%= form_with(model: customer, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Imię i nazwisko", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, "Email", class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :role, "Rola", class: "form-label" %>
    <%= form.text_field :role, class: "form-control" %>

  </div>

  <div class="mb-3">
    <%= form.label :phone_number, "Telefon", class: "form-label" %>
    <%= form.telephone_field :phone_number, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :address, "Adres", class: "form-label" %>
    <%= form.text_area :address, rows: 3, class: "form-control" %>
  </div>

  <%= form.submit "Stwórz użytkownika", class: "btn btn-primary" %>
<% end %>
