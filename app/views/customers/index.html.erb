<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Klienci</h1>
  <%= link_to "Nowy klient", new_customer_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body p-0">
    <table class="table table-striped table-hover mb-0">
      <thead class="table-dark">
      <tr>
        <th>Imię i nazwisko</th>
        <th>Email</th>
        <th>Rola</th>
        <th class="text-end">Akcje</th>
      </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to customer.name, customer %></td>
          <td><%= customer.email %></td>
          <td><%= customer.role %></td>
          <td class="text-end">
            <%= link_to "Pokaż", customer, class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Edytuj", edit_customer_path(customer), class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Usuń", customer, method: :delete, data: { confirm: "Usunąć tego klienta?" }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
